<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >


    <View
        android:id="@+id/viewLine1"
        android:layout_below="@+id/titleUserSelection"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>

    <View
        android:id="@+id/viewLine2"
        android:layout_above="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_1"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_2"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/titleUserSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Car \nset-up"/>


    <ScrollView
        android:layout_below="@+id/viewLine1"
        android:layout_above="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_person"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="7dp"
                android:layout_below="@id/viewLine1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_siege"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seat Configuration"
                        android:gravity="center"
                        android:textSize="20sp"/>


                    <LinearLayout
                        android:weightSum="100"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtViewMode1"
                            android:gravity="center"
                            android:layout_weight="50"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundModeSelected"
                            android:text="Mode 1"
                            />
                        <TextView
                            android:id="@+id/txtViewMode2"
                            android:gravity="center"
                            android:layout_weight="50"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundUnselected"
                            android:text="Mode 2"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="100"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtViewMode3"
                            android:gravity="center"
                            android:layout_weight="50"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundUnselected"
                            android:text="Mode 3"
                            />
                        <TextView
                            android:id="@+id/txtViewMode4"
                            android:gravity="center"
                            android:layout_weight="50"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundUnselected"
                            android:text="Mode 4"
                            />

                    </LinearLayout>






                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_person"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="7dp"
                android:layout_below="@id/viewLine1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/termo"
                    android:adjustViewBounds="true"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperature Selection"
                        android:gravity="center"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:weightSum="100"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imgViewMoins"
                            android:layout_weight="40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_moins"
                            android:adjustViewBounds="true"
                            android:maxHeight="80dp"
                            android:maxWidth="80dp"
                            android:padding="8dp"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/txtViewTempe"
                            android:layout_weight="20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20.5"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:background="@color/colorContourIconPerson"/>



                        <ImageView
                            android:id="@+id/imgViewPlus"
                            android:layout_weight="40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_plus"
                            android:adjustViewBounds="true"
                            android:maxHeight="80dp"
                            android:maxWidth="80dp"
                            android:padding="8dp"
                            android:scaleType="fitCenter"/>
                    </LinearLayout>









                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_person"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="7dp"
                android:layout_below="@id/viewLine1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_radio"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Radio Selection"
                        android:gravity="center"
                        android:textSize="20sp"/>


                    <TextView
                        android:padding="8dp"
                        android:background="@color/colorContourIconPerson"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="wrap_content"
                        android:text="Radio Mela"/>








                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </ScrollView>






    <TextView
        android:id="@+id/poweredBy"
        android:layout_above="@+id/footerUser"
        android:layout_width="match_parent"
        android:textColor="#3095B4"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Powered by"/>


    <ImageView
        android:id="@+id/footerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_altran"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"/>


    <ImageView
        android:id="@+id/imgValide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/validate_icon"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"/>


</RelativeLayout>