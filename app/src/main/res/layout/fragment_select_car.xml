<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >


    <View
        android:id="@+id/viewLine1"
        android:layout_below="@+id/titleUserSelection"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>

    <View
        android:id="@+id/viewLine2"
        android:layout_above="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_1"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_2"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/titleUserSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Car \nselection"/>



    <LinearLayout
        android:id="@+id/userCar1"
        android:layout_below="@+id/viewLine1"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/maserati_1"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxWidth="130dp"
            android:maxHeight="130dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Levante"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userCar2"
        android:layout_below="@+id/userCar1"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxHeight="130dp"
            android:maxWidth="130dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/maserati_2" />

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Quattroporte"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/userCar3"
        android:layout_below="@+id/userCar2"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/maserati_3"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxWidth="130dp"
            android:maxHeight="130dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Gran Turismo"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/poweredBy"
        android:layout_above="@+id/footerUser"
        android:layout_width="match_parent"
        android:textColor="#3095B4"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Powered by"/>


    <ImageView
        android:id="@+id/footerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_altran"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"/>


    <ImageView
        android:id="@+id/imgValide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/validate_icon"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"/>


</RelativeLayout>