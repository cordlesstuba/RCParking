<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">



    <View
        android:id="@+id/viewLine1"
        android:layout_below="@+id/titleUserSelection"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>


    <View
        android:id="@+id/viewLine2"
        android:layout_above="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_1"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_2"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/titleUserSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Parking \nControl"/>





    <LinearLayout
        android:id="@+id/linearLayoutRemoteCtrl"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_person"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/viewLine1"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/remote_icon"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                />

            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Remote Control"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutValetCtrl"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutRemoteCtrl"
        android:background="@drawable/background_person"
        android:padding="20dp"
        android:orientation="horizontal"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/valet_icon1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                />

            <TextView
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Valet Control"/>



        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/poweredBy"
        android:layout_above="@+id/footerUser"
        android:layout_width="match_parent"
        android:textColor="#3095B4"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Powered by"/>


    <ImageView
        android:id="@+id/footerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_altran"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"/>


</RelativeLayout>