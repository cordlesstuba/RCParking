<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/colorBackground"
    tools:context="com.rcp.rcparking.activities.SplashScreenActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_1"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxWidth="250dp"
        android:maxHeight="250dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prisme_2"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="250dp"
        android:maxHeight="250dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/titleSplashScreen"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Parking Control"
        android:textColor="#3095B4"
        android:textSize="50sp"/>



    <ImageView
        android:id="@+id/logo_maserati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_altran"
        android:layout_below="@+id/titleSplashScreen"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:padding="16dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"/>


    <com.github.lzyzsd.circleprogress.ArcProgress
        android:layout_below="@+id/logo_maserati"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:arc_stroke_width="15dp"
        custom:arc_angle="280"
        android:layout_marginTop="10dp"
        custom:arc_progress="0"
        custom:arc_text_color="#3095B4"
        custom:arc_finished_color="#3095B4"
        custom:arc_unfinished_color="@color/colorBackground"
        android:id="@+id/arc_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_width="90dp"
        android:layout_height="90dp"

        />


    <TextView
        android:id="@+id/poweredBy"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:textColor="#3095B4"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Powered by"/>



    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:maxWidth="55dp"
        android:maxHeight="55dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/altran"/>

</RelativeLayout>
