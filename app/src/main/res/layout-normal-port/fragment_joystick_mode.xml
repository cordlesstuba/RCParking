<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <com.rcp.rcparking.customViews.JoystickView
        android:id="@+id/jostickView"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        custom:JV_buttonColor="#b6b4b3"
        custom:JV_borderColor="#3e5663"
        custom:JV_backgroundColor="@color/colorJoystickMain"
        custom:JV_borderWidth="4dp"
        custom:JV_fixedCenter="false"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_margin="10dp"
        android:layout_below="@+id/jostickView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/seekBar"
        android:id="@+id/txtViewValue"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>

</RelativeLayout>