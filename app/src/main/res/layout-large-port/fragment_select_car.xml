<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    >


    <LinearLayout
        android:layout_marginTop="7dp"
        android:id="@+id/userCar1"
        android:layout_width="match_parent"
        android:background="@color/colorBackgroundModeSelected"
        android:padding="17dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/maserati_1"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxWidth="330dp"
            android:maxHeight="330dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Levante"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userCar2"
        android:layout_below="@+id/userCar1"
        android:layout_width="match_parent"
        android:padding="17dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorBackgroundUnselected"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxHeight="330dp"
            android:maxWidth="330dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/maserati_2" />

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Quattroporte"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/userCar3"
        android:layout_below="@+id/userCar2"
        android:layout_width="match_parent"
        android:padding="17dp"
        android:layout_marginTop="7dp"

        android:background="@color/colorBackgroundUnselected"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/maserati_3"
            android:adjustViewBounds="true"
            android:background="@drawable/background_person"
            android:maxWidth="330dp"
            android:maxHeight="330dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Maserati Gran Turismo"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:text="Autonomy : 750 km \nFuel Level :  80% \nKilometrage : 10 000 km"/>

        </LinearLayout>

    </LinearLayout>



    <ImageView
        android:id="@+id/imgValide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/validate_icon"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"/>


</RelativeLayout>